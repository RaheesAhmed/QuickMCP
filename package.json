{
  "name": "quickmcp-sdk",
  "version": "1.0.1",
  "description": "A simplified TypeScript SDK for MCP development without complexity",
  "type": "module",
  "main": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/src/index.js",
      "types": "./dist/src/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rimraf dist",
    "test": "node --test",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src",
    "prepublishOnly": "npm run build",
    "cli": "node dist/src/cli/quickmcp-cli.js"
  },
  "bin": {
    "quickmcp": "./dist/src/cli/quickmcp-cli.js"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "llm",
    "ai",
    "tools",
    "quickmcp",
    "sdk",
    "simplified"
  ],
  "author": "Rahees Ahmed",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/RaheesAhmed/QuickMCP"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "bcryptjs": "^2.4.3",
    "commander": "^11.0.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.18.0",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.0",
    "lru-cache": "^10.0.0",
    "rate-limiter-flexible": "^5.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.0",
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.0",
    "@types/express": "^4.17.0",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
